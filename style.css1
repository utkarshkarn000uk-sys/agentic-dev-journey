body {
  font-family: system-ui, sans-serif;
  background: #0f172a;
  color: #e5e7eb;
  text-align: center;
  padding-top: 80px;
}

button {
  padding: 12px 20px;
  font-size: 16px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  background: #38bdf8;
  color: #020617;
}

button:hover {
  background: #0ea5e9;
}
